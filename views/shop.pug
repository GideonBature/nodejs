extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        if prods.length > 0 
                .grid
                    each product in prods
                        article.card.product-item 
                            header.card__header 
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://images.unsplash.com/photo-1532012197267-da84d127e765?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxleHBsb3JlLWZlZWR8MXx8fGVufDB8fHx8fA%3D%3D", alt="A Book") 
                            div.card__content
                                h2.product__price $19.99
                                p.product__description A great book!
                            .card__actions 
                                button.btn Add to Cart
        else
            h1 No products!